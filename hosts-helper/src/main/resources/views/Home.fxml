<?xml version="1.0" encoding="UTF-8"?>
<?import com.microcold.hosts.view.controller.HostsFileTreeView?>
<?import com.microcold.hosts.view.controller.HostsTableView?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane fx:controller="com.microcold.hosts.view.controller.HomeController"
            xmlns:fx="http://javafx.com/fxml"
            minWidth="720" minHeight="540">
    <top>
        <MenuBar fx:id="menuBar">
            <Menu text="File">
                <MenuItem text="新增"/>
                <MenuItem text="备份"/>
                <SeparatorMenuItem/>
                <MenuItem text="编辑"/>
            </Menu>
            <Menu text="设置">
                <CheckMenuItem fx:id="autoBackupMenuItem" text="自动备份" onAction="#setAutoBackup"/>
                <MenuItem text="配置"/>
            </Menu>
            <!--<Menu text="Help">-->
            <!--<MenuItem text="Search" disable="true"/>-->
            <!--<MenuItem text="Online Manual" visible="false"/>-->
            <!--<SeparatorMenuItem/>-->
            <!--&lt;!&ndash;<MenuItem text="About" onAction="#handleAboutAction"/>&ndash;&gt;-->
            <!--</Menu>-->
        </MenuBar>
    </top>
    <left>
        <HostsFileTreeView fx:id="hostsFileTreeView" maxWidth="120" onMouseClicked="#refreshHostsTable"/>
    </left>
    <center>
        <HostsTableView fx:id="hostsTableView" minWidth="600" minHeight="400"/>
    </center>
    <bottom>
        <Label fx:id="errorMessage"/>
    </bottom>
</BorderPane>
