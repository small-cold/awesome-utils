<?xml version="1.0" encoding="UTF-8"?>
<?import com.microcold.hosts.view.HostsFileTreeView?>
<?import com.microcold.hosts.view.HostsTableView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane fx:controller="com.microcold.hosts.view.controller.HomePageController"
            xmlns:fx="http://javafx.com/fxml"
            minWidth="720" minHeight="540">
    <BorderPane>
        <left>
            <VBox>
                <HostsFileTreeView fx:id="hostsFileTreeView" maxWidth="120" onMouseClicked="#refreshHostsTable"/>
            </VBox>
        </left>
        <center>
            <HostsTableView fx:id="hostsTableView" minWidth="600" minHeight="400"/>
        </center>
        <bottom>
            <HBox>
                <Label fx:id="messageLabel" id="messageLabel" alignment="BASELINE_LEFT"/>
                <Label fx:id="errorMessageLabel" id="errorMessageLabel" alignment="BASELINE_RIGHT"/>
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>
